{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "Event.FaceDetected.v1",
  "type": "object",
  "required": ["tenant_id", "site_id", "camera_id", "timestamp", "embedding", "bbox"],
  "properties": {
    "tenant_id": {"type": "string"},
    "site_id": {"type": "string"},
    "camera_id": {"type": "string"},
    "timestamp": {"type": "string", "format": "date-time"},
    "embedding": {"type": "array", "items": {"type": "number"}, "minItems": 512, "maxItems": 512},
    "bbox": {"type": "array", "items": {"type": "number"}, "minItems": 4, "maxItems": 4},
    "snapshot_url": {"type": "string", "format": "uri", "nullable": true},
    "is_staff_local": {"type": "boolean", "default": false}
  }
}

