# Application Configuration
APP_NAME=customer-visits-api
ENV=dev
HOST=0.0.0.0
PORT=8080

# JWT Configuration
JWT_ISSUER=customer-visits.local
JWT_AUDIENCE=customer-visits
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=
API_KEY_SECRET=dev-secret

# Database Configuration (External PostgreSQL Server)
DB_HOST=your-postgres-server.example.com
DB_PORT=5432
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_NAME=customer_visits_db
# Alternative: Full DATABASE_URL override
# DATABASE_URL=postgresql+asyncpg://user:pass@host:port/dbname

# Milvus Configuration (External Milvus Server)
MILVUS_HOST=your-milvus-server.example.com
MILVUS_PORT=19530
MILVUS_COLLECTION=customer_embeddings
# Optional: Authentication for Milvus
MILVUS_USER=your-milvus-user
MILVUS_PASSWORD=your-milvus-password
# Optional: Enable secure/TLS connection
MILVUS_SECURE=false

# MinIO Configuration (External MinIO Server)
MINIO_ENDPOINT=your-minio-server.example.com:9000
MINIO_ACCESS_KEY=your-access-key
MINIO_SECRET_KEY=your-secret-key
MINIO_BUCKET_RAW=faces-raw
MINIO_BUCKET_DERIVED=faces-derived

# Application Settings
TENANT_HEADER=X-Tenant-ID
FACE_SIMILARITY_THRESHOLD=0.6
MAX_FACE_RESULTS=5